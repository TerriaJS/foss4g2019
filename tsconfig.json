{
  "compilerOptions": {
      "target": "es2018",
      "experimentalDecorators": true,
      "module": "es2015",
      "moduleResolution": "node",
      "sourceMap": true,
      "strict": true,
      "allowJs": true,
      "jsx": "preserve",
      "esModuleInterop": true,
      "allowSyntheticDefaultImports": true,
      "outDir": "ts-out",
      "resolveJsonModule": true
  },
  "include": [
      "./lib/**/*",
      "./test/**/*",
      "./node_modules/terriajs/lib/**/*"
  ]
}
